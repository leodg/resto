<% title "Dishes" %>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Desc</th>
    <th>Price</th>
    <th>Available</th>
  </tr>
  <% for dish in @dishes %>
    <tr>
      <td><%=h dish.category_id %></td>
      <td><%=h dish.name %></td>
      <td><%=h dish.desc %></td>
      <td><%=h dish.price %></td>
      <td><%=h dish.available %></td>
      <td><%= link_to "Show", dish %></td>
      <td><%= link_to "Edit", edit_dish_path(dish) %></td>
      <td><%= link_to "Destroy", dish, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Dish", new_dish_path %></p>
