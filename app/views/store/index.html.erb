<% title "Меню" %>

<div id="menu_carousel">
  <div class="previous_button"></div>
    <div class="container">

      <ul>
        <% for dish in @dishes %>
          <li>
            <%= image_tag dish.photo.url(:normal) if dish.photo? %>
            <h1><%=h dish.name %></h1>
            <%#=h dish.desc %>
            <span class="price"><%=h dish.price %><span class="rur">p<span>уб.</span></span></span>


            <div id="buttons">
                <%= submit_tag "Подробнее" %>

                <% form_remote_tag :url => { :action => 'add_to_cart', :id => dish } do %>
                  <%= submit_tag "Заказать" %>
                <% end %>
            </div>
            
          </li>
        <% end %>
      </ul>

    </div>
  <div class="next_button"></div>
</div>


<%= javascript_tag "
      function runMenu() {
              menuCarousel = new UI.Carousel('menu_carousel');
      }
      Event.observe(window, 'load', runMenu);
    "
%>


